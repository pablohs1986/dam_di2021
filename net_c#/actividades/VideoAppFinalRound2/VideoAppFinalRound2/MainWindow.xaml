<Window x:Class="VideoAppFinalRound2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoAppFinalRound2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="210*"/>
            <RowDefinition Height="211*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgLibros" ItemsSource="{Binding Path=listaLibros}" HorizontalAlignment="Center" Height="275" Margin="10,74,10,0" VerticalAlignment="Top" Width="774" Grid.RowSpan="2"/>
        <Menu x:Name="menu" HorizontalAlignment="Center" Height="47" Margin="10,0" VerticalAlignment="Top" Width="774">
            <MenuItem x:Name="miAñadir" Header="Añadir" Height="47" Width="100" Click="miAñadir_Click"/>
        </Menu>
        <Button x:Name="btnModificar" Content="Modificar" HorizontalAlignment="Left" Margin="672,165,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="btnModificar_Click"/>

    </Grid>
</Window>
